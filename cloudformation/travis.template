{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Patrol Travis user",
  "Resources": {
    "TravisUser": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "Policies": [
          {
            "PolicyName": "BuildPatrol",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Resource": [
                    "*"
                  ],
                  "Action": [
                    "iam:SimulateCustomPolicy"
                  ],
                  "Effect": "Allow"
                }
              ]
            }
          }
        ]
      }
    },
    "TravisUserAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "TravisUser"
        }
      }
    }
  },
  "Outputs": {
    "AccessKeyId": {
      "Value": {
        "Ref": "TravisUserAccessKey"
      }
    },
    "SecretAccessKey": {
      "Value": {
        "Fn::GetAtt": [
          "TravisUserAccessKey",
          "SecretAccessKey"
        ]
      }
    }
  }
}
